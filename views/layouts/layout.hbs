<!DOCTYPE html>
<html land="eng">
	<script>
		
		const localCheck = (window.location.href).includes('localhost');
		const rootCheck = (window.location.href).includes('DiscordBot/');
		
		var pageStyles = [
			[
				'css',
				'bootstrap.css'
			],
			[
				'css',
				'all.min.css'
			],
			[
				'css',
				'style.css'
			],
			[
				'jquery',
				'jquery.js'
			],
			[
				'js',
				'bootstrap.js'
			],
			[
				'js',
				'main.js'
			]
		];
		
		for (let ps of pageStyles){
			if(ps[0] === 'css'){
				
				if(localCheck || rootCheck){
					var link = '<link rel="stylesheet" href="./css/' + ps[1] + '" />';
				}else{
					var link = '<link rel="stylesheet" href="./DiscordBot/css/' + ps[1] + '" />';					
				}
				document.write( link );	
			}else{				
				
				if(localCheck || rootCheck){
					var src = './' + ps[0] + '/' + ps[1];					
				}else{			
					var src = './DiscordBot/' + ps[0] + '/' + ps[1];
				}		
				var s = document.createElement( 'script' );
				s.setAttribute( 'src', src );		
				
				document.body.appendChild( s );
			}
						
		}
		
		
	</script>
	<head>
		<title>{{ title }}</title>
		
	</head>
